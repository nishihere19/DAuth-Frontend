{
	"name": "dauth-frontend",
	"version": "1.0.0",
	"description": "delta oauth2.0 frontend",
	"main": "main.ts",
	"private": true,
	"scripts": {
		"build": "npm run validate && npm run prelint && npm run lint && cross-env NODE_ENV=production webpack",
		"build:dev": "npm run validate && npm run prelint && npm run lint && cross-env NODE_ENV=development webpack",
		"dev": "webpack serve",
		"start": "serve public --listen 8080",
		"validate": "svelte-check",
		"format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
		"lint": "eslint './src/**/*.{js,ts,svelte}'",
		"lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
		"prelint": "npm run format",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/delta/DAuth-Frontend.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/delta/DAuth-Frontend/issues"
	},
	"homepage": "https://github.com/delta/DAuth-Frontend#readme",
	"devDependencies": {
		"@babel/core": "^7.14.5",
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@babel/preset-env": "^7.14.5",
		"@babel/runtime": "^7.14.5",
		"@fullhuman/postcss-purgecss": "^4.0.3",
		"@smui/button": "^4.2.0",
		"@spaceavocado/svelte-router": "^1.0.16",
		"@tsconfig/svelte": "^2.0.1",
		"@types/css-minimizer-webpack-plugin": "^3.0.1",
		"@types/mini-css-extract-plugin": "^1.4.3",
		"@types/page": "^1.11.2",
		"@types/webpack-dev-server": "^3.11.4",
		"@typescript-eslint/eslint-plugin": "^4.26.1",
		"@typescript-eslint/parser": "^4.26.1",
		"autoprefixer": "^10.2.6",
		"axios": "^0.21.1",
		"babel-loader": "^8.2.2",
		"clean-webpack-plugin": "^3.0.0",
		"core-js": "^3.14.0",
		"cross-env": "^7.0.3",
		"css-loader": "^5.2.6",
		"css-minimizer-webpack-plugin": "^3.0.1",
		"dotenv-webpack": "^7.0.3",
		"eslint": "^7.28.0",
		"eslint-import-resolver-typescript": "^2.4.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-svelte3": "^3.2.0",
		"file-loader": "^6.2.0",
		"husky": "^6.0.0",
		"less-loader": "^9.1.0",
		"lint-staged": "^11.0.0",
		"mini-css-extract-plugin": "^1.6.0",
		"postcss-loader": "^6.1.0",
		"prettier": "^2.3.1",
		"prettier-plugin-svelte": "^2.3.0",
		"regenerator-runtime": "^0.13.7",
		"sapper": "^0.29.1",
		"sass": "^1.34.1",
		"sass-loader": "^12.1.0",
		"style-loader": "^2.0.0",
		"svelte": "^3.38.2",
		"svelte-check": "^2.1.0",
		"svelte-loader": "^3.1.1",
		"svelte-materialify": "^0.3.10",
		"svelte-preprocess": "^4.7.3",
		"svelte-routing": "^1.6.0",
		"svelte-toasts": "^1.1.2",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.2",
		"webpack-dev-server": "^3.11.2"
	},
	"dependencies": {
		"serve": "^12.0.0"
	},
	"browserslist": [
		"defaults"
	],
	"husky": {
		"hooks": {
			"pre-commit": " echo 'staging' lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,css,md,svelte}": "prettier --write"
	}
}
